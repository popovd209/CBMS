<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                    </li>
                    @if (User.IsInRole(Service.SeedData.GetRoleFor.Bartender))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Bartender" asp-action="Index">Bartender</a>
                        </li>
                    }
                    @if (User.IsInRole(Service.SeedData.GetRoleFor.Waiter))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Waiter" asp-action="Index">Waiter</a>
                        </li>
                    }
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <div class="container mt-5 mb-5 p-4 flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted mt-auto">
        <div class="container inner-footer">
            &copy; 2024 - Web - CBMS
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
