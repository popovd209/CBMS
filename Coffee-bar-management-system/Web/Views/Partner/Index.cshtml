@{
    ViewData["Title"] = "Partner Store";
    var products = ViewData["products"] as IEnumerable<Entity.Models.Integration.IntegrationProduct>;
    var categories = ViewData["categories"] as IEnumerable<Entity.Models.Integration.IntegrationCategory>;
}

<h1 class="text-center mb-4">Products</h1>

<table class="table table-striped table-bordered mb-4">
    <thead class="table-dark">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Rating</th>
    </tr>
    </thead>
    <tbody>
    @if (products != null && products.Any())
    {
        @foreach (var item in products)
        {
            <tr>
                <td>
                    <a href="https://flexforgeweb20240913233255.azurewebsites.net/Products/Details/@item.Id">
                        @item.Name
                    </a>
                </td>
                <td>@item.PriceInDenars ден.</td>
                <td>@item.Rating/10</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center text-muted">Our partner shop has no products at the moment.</td>
        </tr>
    }
    </tbody>
</table>

<h1 class="text-center mb-4 mt-4">Categories</h1>

<table class="table table-striped table-bordered mb-4">
    <thead class="table-dark">
    <tr>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
    @if (categories != null && categories.Any())
    {
        @foreach (var item in categories)
        {
            <tr>
                <td>
                    <a href="https://flexforgeweb20240913233255.azurewebsites.net/Products?categoryId=@item.Id">
                        @item.Name
                    </a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center text-muted">Our partner shop has no categories at the moment.</td>
        </tr>
    }
    </tbody>
</table>