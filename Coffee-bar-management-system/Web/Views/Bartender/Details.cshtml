@model Entity.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Order Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2 text-muted">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10 text-coffee">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2 text-muted">
            @Html.DisplayNameFor(model => model.TableTag)
        </dt>
        <dd class="col-sm-10 text-coffee">
            @Html.DisplayFor(model => model.TableTag)
        </dd>
        <dt class="col-sm-2 text-muted">
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>
        <dd class="col-sm-10 text-coffee">
            @Html.DisplayFor(model => model.CreatedBy.FullName)
        </dd>
        <dt class="col-sm-2 text-muted">
            @Html.DisplayNameFor(model => model.CreatedWhen)
        </dt>
        <dd class="col-sm-10 text-coffee">
            @Html.DisplayFor(model => model.CreatedWhen)
        </dd>
    </dl>

    <h4>Products</h4>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Done</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.ProductsInOrder)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => product.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => product.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(model => product.Done)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3 text-end">
    <form asp-action="Finish">
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-success">Finish</button>
    </form>
</div>