@model Entity.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TableTag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TableTag)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedBy.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedWhen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedWhen)
        </dd>
    </dl>
    <div class="row">
        <h3>Products</h3>
        <table class="table">
            <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Done
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model.ProductsInOrder)
            {
                <tr>
                    <td class="col-sm-2">
                        @Html.DisplayFor(model => product.Product.Name)
                    </td>
                    <td class="col-sm-2">
                        @Html.DisplayFor(model => product.Quantity)
                    </td>
                    <td class="col-sm-2">
                        @Html.DisplayFor(model => product.Done)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
<div>
    <form asp-action="Finish">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Finish" class="btn btn-success" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>