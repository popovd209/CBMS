@model Admin_CBMS.Models.WaiterPerformance.WaiterPerformanceViewModel
@{
    ViewData["Title"] = "Waiter Performance";
}

<div class="container mt-4">
    <h2>Get Waiter Performance</h2>

    <form asp-controller="WaiterPerformance" asp-action="Search" method="post" class="form-inline">
        <div class="form-group mb-2">
            <label for="WaiterDropdown" class="mr-2">Select Waiter</label>
            <select class="form-control" id="WaiterDropdown" asp-for="SelectedWaiterId" asp-items="Model.Waiters">
                <option value="">-- Select Waiter --</option>
            </select>
        </div>

        <div class="form-group mx-sm-3 mb-2">
            <label for="SelectedDate" class="mr-2">Select Date</label>
            <input type="date" class="form-control" asp-for="SelectedDate" />
        </div>

        <button type="submit" class="btn btn-primary mb-2">Search</button>
    </form>

    @if (Model.PerformanceResults != null)
    {
        <h4 class="mt-4">Results</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Waiter Name</th>
                    <th>Date</th>
                    <th>Performance Data</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.PerformanceResults)
                {
                    <tr>
                        <td>@result.WaiterName</td>
                        <td>@result.Date</td>
                        <td>@result.PerformanceData</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
